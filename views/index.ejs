<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="bg-gray-900 text-white flex justify-center items-center min-h-screen">
    <div class="max-w-2xl w-full p-6 bg-gray-800 rounded-lg shadow-lg">
        <h1 class="mb-6 text-3xl font-bold text-center">CRUD Operation with MERN</h1>
        
       
        
        <h2 class="text-xl font-semibold mb-3">Create User</h2>
        <form action="/create" method="post" onsubmit="return showSuccess()">
            <div class="mb-4">
                <input class="w-full px-4 py-2 border border-gray-600 rounded-lg bg-gray-700 text-white placeholder-gray-400" type="text" placeholder="Name" name="name" required>
            </div>
            <div class="mb-4">
                <input class="w-full px-4 py-2 border border-gray-600 rounded-lg bg-gray-700 text-white placeholder-gray-400" type="email" name="email" placeholder="Email" required>
            </div>
            <div class="mb-4">
                <input class="w-full px-4 py-2 border border-gray-600 rounded-lg bg-gray-700 text-white placeholder-gray-400" type="text" name="image" placeholder="Image URL" required>
            </div>
            <div class="flex justify-end">
                <input type="submit" class="px-5 py-2 bg-blue-500 text-white rounded-lg shadow-md hover:bg-blue-600 cursor-pointer" value="Create User">
            </div>
        </form>
        <div class="flex justify-between mb-4">
            <a href="/read" class="px-4 py-2 bg-yellow-400 text-black rounded-lg shadow-md hover:bg-yellow-500">View Users</a>
        </div>
    </div>

    <script>
        function showSuccess() {
            Swal.fire({
                title: "Success!",
                text: "User created successfully!",
                icon: "success",
                confirmButtonText: "OK"
            });
            return true;
        }
    </script>
</body>

</html>
